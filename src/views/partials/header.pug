header
	a(href="/").header__logo
		i.fab.fa-youtube
	nav
		ul
			li
				a(href="/search")
					i.fas.fa-search
			if loggedIn
				li
					a(href="/videos/upload") Upload Video
				li
					a(href="/users/edit") Edit Profile
				li
					a(href="/users/logout") Logout
				li
					a(href=`/users/${loggedInUser._id}`)
						if String(loggedInUser.avatarUrl) === String("undefined")
							img.header__avatar(src="https://itzytube.s3.ap-northeast-2.amazonaws.com/images/res/itzy.jpg", crossorigin)
						else
							if isHeroku
								img.header__avatar(src=loggedInUser.avatarUrl, crossorigin)
							else
								img.header__avatar(src=`/${loggedInUser.avatarUrl}`, crossorigin)
			else
				li
					a(href="/login") Login
				li
					a(href="/join").header__btn  Join