extends base

block content
	h4 Update Video
	form(method="POST")
		input(name="title", placeholder="Video Title", value=video.title, required)
		input(name="description", type="text", placeholder="Description", value=video.description, maxLength=150, required)
		input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", value=video.hashtags.join(), required)
		input(type="submit", value="Save")