extends base

block content
	div.upload__container
		div.upload__video
			button#actionBtn.social__btn Create 5s Video!
		form(method="POST", enctype="multipart/form-data")
			label(for="video") Video File
			input(name="video", type="file", id="video", accept="video/*", required)
			label(for="thumb") Thumbnail File
			input(name="thumb", type="file", id="thumb", accept="image/*", required)
			input(name="title", type="text", placeholder="Title", maxLength=50, required)
			input(name="description", type="text", placeholder="Description", maxLength=150, required)
			input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", required)
			input(type="submit", value="Upload Video")

block scripts
	script(src="/static/js/recoder.js")